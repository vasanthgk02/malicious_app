                    </LinearLayout>
                    <LinearLayout android:layout_width="@dimen/width_0" android:layout_height="match_parent" android:layout_weight="@integer/landscape_initial_ratio"/>
                </LinearLayout>
                <include android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/challege_footer"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <ProgressBar android:id="@+id/pbHeaderProgress" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
</RelativeLayout>
