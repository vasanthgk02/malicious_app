                        <com.cardinalcommerce.shared.cs.userinterfaces.uielements.CCATextView android:textAppearance="@style/challengeLabelText" android:textSize="@dimen/text_size_16" android:gravity="center" android:layout_gravity="center" android:id="@+id/challengeInfoLabelTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/marginTop_20" android:layout_marginBottom="@dimen/marginBottom_10" android:hint="@string/challInfoText"/>
