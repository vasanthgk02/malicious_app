        <TextView android:id="@+id/freshchat_channel_desc" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/freshchat_channel_unread_count" android:layout_below="@+id/freshchat_channel_name" android:layout_alignLeft="@+id/freshchat_channel_name" android:layout_toStartOf="@+id/freshchat_channel_unread_count" android:layout_alignStart="@+id/freshchat_channel_name" style="?attr/freshchatChannelDescriptionTextStyle"/>
    </RelativeLayout>
</LinearLayout>
