<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/icon_container" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:id="@+id/large_icon" android:paddingBottom="1dp" android:layout_width="50dp" android:layout_height="50dp" android:src="@android:drawable/alert_dark_frame" android:paddingStart="4dp" android:paddingEnd="6dp"/>
        <ImageView android:id="@+id/small_icon" android:layout_width="18.2dp" android:layout_height="18.2dp" android:src="@android:drawable/ic_dialog_info" android:layout_alignRight="@+id/large_icon" android:layout_alignBottom="@+id/large_icon" android:layout_alignEnd="@+id/large_icon"/>
    </RelativeLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/notification_main" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_toRightOf="@+id/icon_container" android:layout_alignParentBottom="false" android:paddingStart="6dp" android:paddingEnd="6dp" android:layout_toEndOf="@+id/icon_container">
        <TextView android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/msg_summary" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView android:id="@+id/timestamp" android:paddingTop="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:paddingStart="3.5dp" android:paddingEnd="3.5dp" android:layout_alignParentEnd="true"/>
</RelativeLayout>
