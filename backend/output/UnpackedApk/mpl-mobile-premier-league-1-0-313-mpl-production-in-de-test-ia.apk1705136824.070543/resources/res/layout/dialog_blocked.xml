<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center" android:orientation="vertical" android:background="@color/light_background" android:padding="20dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minHeight="220dp">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:layout_width="24sp" android:layout_height="24sp" android:layout_marginRight="12dp" android:src="@android:drawable/ic_dialog_alert" android:tint="@android:color/holo_red_light"/>
            <TextView android:textColor="@android:color/holo_red_light" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:text="@string/blocked_title" style="@style/TextAppearance.DialogWindowTitle"/>
        </LinearLayout>
        <TextView android:textSize="22sp" android:textColor="@android:color/secondary_text_light" android:gravity="center_horizontal" android:id="@+id/subtitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:text="@string/blocked_subtitle" style="@style/TextAppearance.DeviceDefault.Widget.ActionBar.Subtitle"/>
    </LinearLayout>
</FrameLayout>
