<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/paynimo_backgroundColor" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
    <LinearLayout android:orientation="vertical" android:background="@color/paynimo_backgroundColor" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.paynimo.android.payment.CustomButton android:layout_gravity="center_horizontal" android:id="@+id/paynimo_btn_apps" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="15dp" android:text="Select From Installed UPI Apps" style="@style/ButtonPaynimo"/>
        <com.paynimo.android.payment.CustomButton android:layout_gravity="center_horizontal" android:id="@+id/paynimo_btn_VPA" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="15dp" android:text="Enter Your VPA" style="@style/ButtonPaynimo"/>
        <TextView android:textStyle="bold" android:textColor="@color/paynimo_defaultTextColor" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="Select a UPI App"/>
        <GridView android:gravity="center" android:id="@+id/paynimo_grid_upi" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="2dp" android:horizontalSpacing="5dp" android:verticalSpacing="5dp" android:stretchMode="columnWidth" android:columnWidth="100dp" android:numColumns="3"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/paynimo_note_lyt" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp">
            <LinearLayout android:orientation="vertical" android:id="@+id/paynimo_ll_psp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textColor="@color/paynimo_defaultTextColor" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Enter UPI Address"/>
                <RelativeLayout android:orientation="horizontal" android:id="@+id/paynimo_rl_psp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textColor="@color/paynimo_defaultTextColor" android:id="@+id/paynimo_txt_psp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="/@ybl" android:layout_alignParentRight="true" android:layout_centerInParent="true"/>
                    <Spinner android:id="@+id/paynimo_spn_PSP" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:layout_toLeftOf="@+id/paynimo_txt_psp" android:layout_alignParentRight="true" android:layout_centerInParent="true"/>
                    <EditText android:id="@+id/paynimo_edt_VPA" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/paynimo_spn_PSP" android:inputType="textEmailAddress"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/paynimo_ll_configs" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <CheckBox android:id="@+id/paynimo_chk_save_vpa" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/paynimo_upi_checkbox_label"/>
            <com.paynimo.android.payment.CustomButton android:layout_gravity="center_horizontal" android:id="@+id/paynimo_upi_pay_btn" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="15dp" android:layout_marginTop="30dp" android:text="@string/paynimo_imps_trigger_btn_default" style="@style/ButtonPaynimo"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
