    <androidx.constraintlayout.widget.ConstraintLayout android:gravity="bottom" android:id="@+id/release_note_layout_main" android:background="@color/black__50" android:paddingTop="@dimen/padding_24" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
