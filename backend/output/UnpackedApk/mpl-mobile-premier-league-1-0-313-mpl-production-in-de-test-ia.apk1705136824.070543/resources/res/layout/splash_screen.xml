            <View android:id="@+id/gesture_view" android:background="@drawable/gesture_view" android:layout_width="44dp" android:layout_height="4dp" android:layout_marginTop="@dimen/margin_8" app:layout_constraintBottom_toTopOf="@+id/update_item_list" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
