<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/scroll_view" android:background="#9a646464" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_parent_container" android:layout_width="match_parent" android:layout_height="match_parent">
        <View android:id="@+id/dark_background" android:layout_width="match_parent" android:layout_height="200dp"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_curtain_container" android:background="#fff0f1f6" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:id="@+id/rl_curtain_header" android:background="#fff0f1f6" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp">
                <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#ff515978" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="PAY USING..." android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
                <ImageView android:id="@+id/iv_rzp_name_logo" android:padding="0dp" android:layout_width="75dp" android:layout_height="16dp" android:layout_marginRight="20dp" android:src="@drawable/rzp_name_logo" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="Powered By Razorpay" android:layout_marginEnd="20dp" android:layout_alignParentEnd="true"/>
                <TextView android:textSize="12dp" android:textColor="#ffa1a6b7" android:id="@+id/tv_powered_by" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="Powered by" android:layout_toLeftOf="@+id/iv_rzp_name_logo" android:layout_alignTop="@+id/iv_rzp_name_logo"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
