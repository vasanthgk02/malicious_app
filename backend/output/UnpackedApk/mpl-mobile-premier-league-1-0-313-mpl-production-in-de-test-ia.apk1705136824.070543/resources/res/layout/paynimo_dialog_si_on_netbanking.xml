<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/paynimo_card_main_container" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="#ffffffff" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="horizontal" android:id="@+id/lyt_paynimo_si" android:layout_width="match_parent" android:layout_height="wrap_content">
            <CheckBox android:id="@+id/paynimo_vault_card_checkbox_si" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/paynimo_cc_checkbox_si_label"/>
            <com.paynimo.android.payment.CustomTextView android:textSize="@dimen/paynimo_textView_textSize_vault_heading" android:textStyle="italic" android:textColor="@color/paynimo_textViewSITextColor" android:gravity="right" android:id="@+id/paynimo_vault_card_si_info" android:background="@android:color/transparent" android:padding="1dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" style="@style/TextViewPaynimo"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/paynimo_card_si_non_edit_container" android:background="@drawable/paynimo_view_rounded_corner" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="15dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp">
            <com.paynimo.android.payment.CustomTextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Account Number" style="@style/TextViewPaynimo"/>
            <com.paynimo.android.payment.CustomEditText android:id="@+id/paynimo_card_n_et_account_number" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Enter Account Number for SI" android:inputType="number"/>
            <com.paynimo.android.payment.CustomTextView android:id="@+id/paynimo_card_n_tv_account_number" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/TextViewPaynimo"/>
            <View android:id="@+id/paynimo_si_n_divider" android:background="@color/paynimo_listDividerColor" android:visibility="gone" android:layout_width="match_parent" android:layout_height="2dp"/>
            <com.paynimo.android.payment.CustomTextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Debit Start Date" style="@style/TextViewPaynimo"/>
            <com.paynimo.android.payment.CustomTextView android:id="@+id/paynimo_card_n_et_debit_start_date" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/TextViewPaynimo"/>
            <View android:background="@color/paynimo_listDividerColor" android:layout_width="match_parent" android:layout_height="2dp"/>
            <com.paynimo.android.payment.CustomTextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Debit End Date" style="@style/TextViewPaynimo"/>
            <com.paynimo.android.payment.CustomTextView android:id="@+id/paynimo_card_n_et_debit_end_date" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/TextViewPaynimo"/>
            <View android:background="@color/paynimo_listDividerColor" android:layout_width="match_parent" android:layout_height="2dp"/>
            <com.paynimo.android.payment.CustomTextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Maximum Amount to be Debited" style="@style/TextViewPaynimo"/>
            <com.paynimo.android.payment.CustomTextView android:id="@+id/paynimo_card_n_et_amount_debit" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLength="20" style="@style/TextViewPaynimo"/>
            <View android:background="@color/paynimo_listDividerColor" android:layout_width="match_parent" android:layout_height="2dp"/>
            <com.paynimo.android.payment.CustomTextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Amount Type" style="@style/TextViewPaynimo"/>
            <com.paynimo.android.payment.CustomTextView android:id="@+id/paynimo_card_n_et_amountType" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/TextViewPaynimo"/>
            <View android:background="@color/paynimo_listDividerColor" android:layout_width="match_parent" android:layout_height="2dp"/>
            <com.paynimo.android.payment.CustomTextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Frequency" style="@style/TextViewPaynimo"/>
            <com.paynimo.android.payment.CustomTextView android:id="@+id/paynimo_card_n_et_frequency" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/TextViewPaynimo"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/paynimo_card_si_container" android:background="@drawable/paynimo_view_rounded_corner" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="15dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp">
            <com.paynimo.android.payment.CustomTextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Account Number" style="@style/TextViewPaynimo"/>
            <com.paynimo.android.payment.CustomEditText android:id="@+id/paynimo_card_et_account_number" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Enter Account Number for SI" android:inputType="number"/>
            <com.paynimo.android.payment.CustomTextView android:id="@+id/paynimo_card_tv_account_number" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/TextViewPaynimo"/>
            <View android:id="@+id/paynimo_si_divider" android:background="@color/paynimo_listDividerColor" android:visibility="gone" android:layout_width="match_parent" android:layout_height="2dp"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                    <com.paynimo.android.payment.CustomTextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Debit Start Date" style="@style/TextViewPaynimo"/>
                    <com.paynimo.android.payment.CustomEditText android:id="@+id/paynimo_card_et_debit_start_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="DDMMYYYY" android:inputType="number"/>
                </LinearLayout>
                <ImageButton android:id="@+id/paynimo_vault_card_eb_start_date" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:src="@drawable/paynimo_calendar_icon" android:contentDescription="Selected date"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                    <com.paynimo.android.payment.CustomTextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Debit End Date" style="@style/TextViewPaynimo"/>
                    <com.paynimo.android.payment.CustomEditText android:id="@+id/paynimo_card_et_debit_end_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="DDMMYYYY" android:inputType="number"/>
                </LinearLayout>
                <ImageButton android:id="@+id/paynimo_vault_card_eb_end_date" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:src="@drawable/paynimo_calendar_icon" android:contentDescription="Selected date"/>
            </LinearLayout>
            <com.paynimo.android.payment.CustomTextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Maximum Amount to be Debited" style="@style/TextViewPaynimo"/>
            <com.paynimo.android.payment.CustomEditText android:id="@+id/paynimo_card_et_amount_debit" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="1000.00" android:maxLength="20" android:inputType="numberDecimal"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.paynimo.android.payment.CustomTextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Amount Type" android:layout_weight="1" style="@style/TextViewPaynimo"/>
                <Spinner android:id="@+id/paynimo_card_spinner_amountType" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
            <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.paynimo.android.payment.CustomTextView android:id="@+id/paynimo_text_view_frequency" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Frequency" android:layout_alignParentLeft="true" style="@style/TextViewPaynimo"/>
                <Spinner android:id="@+id/paynimo_card_spinner_frequency" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/paynimo_text_view_frequency" android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
            <com.paynimo.android.payment.CustomButton android:textSize="@dimen/paynimo_textView_textSize_vault_heading" android:textColor="#ffffffff" android:id="@+id/paynimo_si_on_netbanking_submit_btn" android:background="@drawable/paynimo_button_background" android:layout_width="75dp" android:layout_height="35dp" android:layout_marginRight="20dp" android:text="@string/paynimo_custom_dialog_submit_label" style="@style/ButtonPaynimo"/>
            <com.paynimo.android.payment.CustomButton android:textSize="@dimen/paynimo_textView_textSize_vault_heading" android:textColor="#ffffffff" android:id="@+id/paynimo_si_on_netbanking_cancel_btn" android:background="@drawable/paynimo_button_background" android:layout_width="75dp" android:layout_height="35dp" android:layout_marginLeft="20dp" android:text="@string/paynimo_custom_dialog_cancel_label" style="@style/ButtonPaynimo"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
